<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_products_home">
    <fragment
        android:id="@+id/navigation_products_home"
        android:name="com.tavantdemo.productscatalogue.ui.producthome.ProductsHomeFragment"
        android:label="@string/title_products_home"
        tools:layout="@layout/fragment_products_home">
        <action
            android:id="@+id/action_to_product_deatils"
            app:destination="@id/productDetails" />
    </fragment>

    <fragment
        android:id="@+id/navigation_fav_products"
        android:name="com.tavantdemo.productscatalogue.ui.favproducts.FavoriteProductsFragment"
        android:label="@string/title_fav_products"
        tools:layout="@layout/fragment_fav_product" />

    <fragment
        android:id="@+id/productDetails"
        android:name="com.tavantdemo.productscatalogue.ui.productdetails.ProductDetails"
        android:label="@string/product_details"
        tools:layout="@layout/fragment_product_details" />
</navigation>